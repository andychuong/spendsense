# Application Configuration
APP_NAME=SpendSense API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://spendsense_user:spendsense_password@localhost:5432/spendsense_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_DATA=spendsense-data-dev
S3_BUCKET_ANALYTICS=spendsense-analytics-dev

# JWT Configuration
# For RS256 (recommended): Provide RSA private and public keys
# For HS256 (legacy): Provide JWT_SECRET_KEY
# In development, keys will be auto-generated if not provided
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
# Note: In production, RSA keys should be stored in AWS Secrets Manager

# OAuth Configuration (Optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=
OAUTH_APPLE_CLIENT_ID=
OAUTH_APPLE_KEY_ID=
OAUTH_APPLE_TEAM_ID=
OAUTH_APPLE_PRIVATE_KEY=

# OpenAI Configuration (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# RAG System Configuration
RAG_ENABLED=false  # Set to true to enable RAG recommendation generation
RAG_ROLLOUT_PERCENTAGE=0.10  # Percentage of users in A/B test (0.0-1.0)
RAG_OPENAI_MODEL=gpt-4-turbo-preview  # Model for RAG generation
RAG_VECTOR_DB_PATH=./data/chroma_prod  # Path to ChromaDB vector database
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2  # Sentence transformer model for embeddings
RAG_TOP_K=10  # Number of documents to retrieve from vector database
RAG_FORCE_CATALOG_FALLBACK=false  # Force fallback to catalog-based generation if RAG fails

# SMS Configuration (AWS SNS)
SNS_REGION=us-west-1
SMS_MOCK_MODE=false  # Set to true for local development to log SMS codes to console instead of sending
# Note: AWS credentials (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY) are used for SNS
# Note: If you get "No origination entities available to send" error, set SMS_MOCK_MODE=true for development

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

