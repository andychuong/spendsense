# Application Configuration
APP_NAME=SpendSense API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://spendsense_user:spendsense_password@localhost:5432/spendsense_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_DATA=spendsense-data-dev
S3_BUCKET_ANALYTICS=spendsense-analytics-dev

# JWT Configuration
# For RS256 (recommended): Provide RSA private and public keys
# For HS256 (legacy): Provide JWT_SECRET_KEY
# In development, keys will be auto-generated if not provided
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
# Note: In production, RSA keys should be stored in AWS Secrets Manager

# OAuth Configuration (Optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=
OAUTH_APPLE_CLIENT_ID=
OAUTH_APPLE_KEY_ID=
OAUTH_APPLE_TEAM_ID=
OAUTH_APPLE_PRIVATE_KEY=

# OpenAI Configuration (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

