# ECS Task Role - S3 Access
resource "aws_iam_role_policy" "ecs_task_s3" {
  name = "${var.project_name}-${var.environment}-ecs-task-s3"
  role = aws_iam_role.ecs_task.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject",
          "s3:ListBucket"
        ]
        Resource = [
          "${var.s3_data_bucket_arn}",
          "${var.s3_data_bucket_arn}/*",
          "${var.s3_logs_bucket_arn}",
          "${var.s3_logs_bucket_arn}/*",
          "${var.s3_reports_bucket_arn}",
          "${var.s3_reports_bucket_arn}/*"
        ]
      }
    ]
  })
}

